<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">

            <div class="card">
                <div class="card-body">
                    <form action="/tareas/edit/{{tasks.id}}" method="POST">
                        <div class="form-group">
                            <input type="text" value="{{tasks.name}}" name="name" class="form-control" placeholder="Task Name" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="date" value="{{tasks.time}}" name="time" class="form-control">
                        </div>
                        <div class="form-group">
                            <textarea name="description" rows="3" class="form-control">{{tasks.description}}</textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success  btn-block">
                                Save
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>