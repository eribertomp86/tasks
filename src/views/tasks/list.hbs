<div class="container p-4">
    <div class="row">
        {{#each tasks}}
            <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <a>
                        <h3 class="card-title text-uppercase">
                            {{ name }}
                        </h3>
                    </a>
                    <p class="m-2">{{ description }}</p>
                     <p class="text-muted">
                        {{timeago time}}
                    </p>   
                     <a class="btn btn-danger"  href="list/delete/{{id}}">
                        Delete
                    </a>
                    <a class="btn btn-secondary" href="list/edit/{{id}}">
                        Edit
                    </a>           
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>There are not Tasks saved yet.</p>
                <a href="/tareas/add">Create One!</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>



